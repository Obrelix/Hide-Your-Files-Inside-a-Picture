<Window x:Class="Hide_Your_Files_Inside_a_Picture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hide_Your_Files_Inside_a_Picture"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="520" MinWidth="520" MinHeight="630" Loaded="Window_Loaded" Icon="Resources/lock.ico" >
    <Window.Background>
        <ImageBrush ImageSource="Resources/Background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="_Menu" >
                <Separator />
                <MenuItem Header="_Encrypt your Passwords"  />
                <!--<MenuItem Header="_Start Ckan" Click="Ckan_Click" />-->
                    <Separator />
                    <Separator />
                    <MenuItem Header="_Exit"  />
                </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Download" />
                <MenuItem Header="Report an _issue"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Frame x:Name="frame" NavigationUIVisibility="Hidden"  Content="Frame" Margin="0"/>
        </Grid>
    </DockPanel>
</Window>
